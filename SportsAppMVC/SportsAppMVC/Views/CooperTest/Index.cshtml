@model IEnumerable<SportsAppMVC.Models.CooperTest>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th class="col-sm-8">
                @Html.DisplayNameFor(model => model.TestName)
            </th>
            <th><a asp-action="AddorEdit" class="btn btn-outline-success">Create Test</a></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TestName)
            </td>
            <td>
                <a asp-action="AddorEdit" asp-route-id="@item.TestID" class=""><span class="glyphicon glyphicon-edit"></span>&nbsp;Edit</a>&nbsp;&nbsp;&nbsp;&nbsp;
                <a asp-action="Delete" asp-route-id="@item.TestID" onclick="return confirm('Are you sure to delete this test?')"><span class="glyphicon glyphicon-trash"></span>&nbsp;Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
